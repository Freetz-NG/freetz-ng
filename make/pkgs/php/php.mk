$(PKG)_CONFIGURE_ENV+=iconv_impl_name=gnu_libiconv
$(PKG)_CONFIGURE_OPTIONS+=--with-iconv-dir="$(TARGET_TOOLCHAIN_STAGING_DIR)$(LIBICONV_PREFIX)"
