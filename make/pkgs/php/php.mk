$(PKG)_CONFIGURE_OPTIONS+=$(if $(FREETZ_PACKAGE_PHP_WITH_JSON),--enable-json,--disable-json)

ifeq ($(strip $(FREETZ_PACKAGE_PHP_WITH_LIBXML)),y)
$(PKG)_DEPENDS_ON+=libxml2
