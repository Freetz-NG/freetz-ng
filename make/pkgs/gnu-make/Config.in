config FREETZ_PACKAGE_GNU_MAKE
	bool "GNU Make 4.2.1/4.4.1 (binary only)"
	default n
	help
		Make is a tool which controls the generation of executables and
		other non-source files of a program from the program's source files.

if FREETZ_PACKAGE_GNU_MAKE

	choice
		prompt "Version"
			default FREETZ_PACKAGE_GNU_MAKE_VERSION_CURRENT

		config FREETZ_PACKAGE_GNU_MAKE_VERSION_ABANDON
			bool "4.2.1"
			depends on  (FREETZ_TARGET_UCLIBC_0_9_28 || FREETZ_TARGET_UCLIBC_0_9_29)

		config FREETZ_PACKAGE_GNU_MAKE_VERSION_CURRENT
			bool "4.4.1"
			depends on !(FREETZ_TARGET_UCLIBC_0_9_28 || FREETZ_TARGET_UCLIBC_0_9_29)

	endchoice

endif # FREETZ_PACKAGE_GNU_MAKE

